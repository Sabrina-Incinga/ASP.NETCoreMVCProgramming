@model MVCEmpleado.Models.Empleado
@{
    ViewData["Title"] = "Delete";
}

<section>
    <h2>
        @Model.Nombre @Model.Apellido
    </h2>
    <p>¿Está seguro de que desea eliminar este empleado?</p>
    @using(Html.BeginForm("Delete", "Empleado", FormMethod.Post))
    {
        <article>
            
            <p>
                @Html.DisplayNameFor(model => model.DNI): 
                @Html.DisplayFor(model => model.DNI)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.FechaNacimiento): 
                @Html.DisplayFor(model => model.FechaNacimiento)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Legajo): 
                @Html.DisplayFor(model => model.Legajo)
            </p>
            <p>
                @Html.DisplayNameFor(model => model.Titulo)
                @Html.DisplayFor(model => model.Titulo)
            </p>
        </article>
        <button type="submit" class="deleteBtn">Eliminar</button>
        <button type="button" class="cancelBtn">@Html.ActionLink("Cancelar", "Index", "Empleado")</button>
    }
</section>

