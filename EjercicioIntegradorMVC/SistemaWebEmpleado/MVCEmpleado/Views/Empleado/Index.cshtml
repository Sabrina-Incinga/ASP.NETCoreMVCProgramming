@model IEnumerable<MVCEmpleado.Models.Empleado>

@{
    ViewData["Title"] = "Index Empleados";
}

<h2>Todos los empleados</h2>
@Html.ActionLink("Nuevo", "Create", "Empleado")

<table class="listTable">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.DNI)</th>
            <th>@Html.DisplayNameFor(model => model.Legajo)</th>
            <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                <td>@Html.DisplayFor(modelItem => item.Legajo)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                <td>@Html.ActionLink(item.Titulo, "GetByTitle", "Empleado", new{titulo=item.Titulo})</td>
                <td>
                    @Html.ActionLink("Detalle", "Details", "Empleado", new{id=item.Id})<br/>
                    @Html.ActionLink("Eliminar", "Delete", "Empleado", new{id=item.Id})<br/>
                    @Html.ActionLink("Editar", "Edit", "Empleado", new{id=item.Id})
                </td>
            </tr>
        }
    </table>
    @section SideBar{
    <aside class="aside">
        <h3>Administración de empleados</h3>
    </aside>
}
